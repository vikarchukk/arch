[ autostart-wm ] автосторат віконого менеджера
> v ~/.bash_profile { startx }
> sudo vim /etc/systemd/system/getty@tty1.service.d/override.conf {
[Service]
ExecStart=
ExecStart=-/usr/bin/agetty --autologin vikarchuk --noclear %I $TERM }

[ power management ] ( wiki.archlinux.org/title/Power_management )
> sudo vim /etc/systemd/logind.conf {
HandleLidSwitch=ignore
HandleLidSwitchExternalPower=ignore
HandleLidSwitchDocked=ignore }

> sudo vim /etc/mkinitcpio.conf {
HOOKS=(base udev autodetect modconf kms keyboard keymap consolefont block filesystems resume fsck) } додати resume
> mkinitcpio -P

> sudo dd if=/dev/zero of=/swapfile bs=1M count=16k status=progress
> sudo chmod 0600 /swapfile
> sudo mkswap -U clear /swapfile
> sudo swapon /swapfile
> sudo vim /etc/fstab { /swapfile none swap defaults 0 0 }

> sudo findmnt -no UUID -T /swapfile
> sudo filefrag -v /swapfile | awk '$1=="0:" {print substr($4, 1, length($4)-2)}'
> sudo vim /boot/loader/entries/arch.conf { options ... resume=UUID=... resume_offset=... }

> sudo vim /etc/systemd/logind.conf {
HandleLidSwitch=hibernate
HandleLidSwitchExternalPower=hibernate
HandleLidSwitchDocked=hibernate }

> sudo systemctl hibernate

[ battery-alert ] сповіщення про низький рівень батереї
> потрібний herbe для сповіщення
> v battery-alert {
#!/bin/bash

while true; do
  while [ "$(cat /sys/class/power_supply/BAT0/capacity)" -lt 10 ] && [ "$(cat /sys/class/power_supply/BAT0/status)" = "Discharging" ]; do
    herbe "[ low battery power: ... < 10% ]]]]]]]]]]]]]]]]]]]]]]]"
    sleep 1
  done
  sleep 300
done
}
> bash battery-alert

[ bash ] налаштування вигляду bash
> v ~/.bashrc {
#
# ~/.bashrc
#

# bash
[[ $- != *i* ]] && return

# модефікація команд
alias ls='ls --color=auto -a'
alias v='vim'

# рядок перед курсором
off="\[\033[0m\]"
purple="\[\033[1;35m\]"
green="\[\033[1;32m\]"
red="\[\033[1;31m\]"
export PS1="${green}[${off}${purple}\${PWD/#\$HOME/\~}${off}${green}]${off}${red}\$${off} "

# заговолок вікна
PROMPT_COMMAND='printf "\033]0;${PWD/#$HOME/"~"}\007"'
}
