1. vim /etc/pacman.conf {
[arch-mact2]
Server = https://mirror.funami.tech/arch-mact2/os/x86_64
SigLevel = Never
}
2. sudo pacman -S t2fanrd // скачування
3. sudo systemctl enable --now t2fanrd // запуск і додавання в автостарт
4. vim /etc/t2fand.conf {
[Fan1]
low_temp=35
high_temp=50
speed_curve=exponential
always_full_speed=false

[Fan2]
low_temp=35
high_temp=50
speed_curve=exponential
always_full_speed=false
} // інструкція - https://github.com/NoaHimesaka1873/t2fand
4. sudo systemctl restart t2fanrd // перезапуск програми
