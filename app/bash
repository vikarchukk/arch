> v ~/.bashrc {
#
# ~/.bashrc
#

# bash
[[ $- != *i* ]] && return

# модефікація команд
alias ls='ls --color=auto -a'
alias v='vim'

# рядок перед курсором
off="\[\033[0m\]"
blue="\[\033[1;34m\]"
green="\[\033[1;32m\]"
red="\[\033[1;31m\]"
export PS1="${green}[${off}${blue}\${PWD/#\$HOME/\~}${off}${green}]${off}${red}\$${off} "

# заговолок вікна
PROMPT_COMMAND='printf "\033]0;${PWD/#$HOME/"~"}\007"'
}
